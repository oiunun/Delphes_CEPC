\newcommand{\AC@PrintCepcCover}{
  \bgroup\global\setbox255\vbox{%
    \vspace*{-.25in}%
    \noindent\hspace*{-.25in}%
    \rlap{\begin{minipage}[t][\AC@CepcCoverHeight][c]{\AC@CepcCoverWidth}%
        {\CepcCoverHeader}%
        \vfill%
        {\CepcCoverBody}%
        \vfill%
        {\CepcCoverFooter}%
      \end{minipage}}%
  }
  \egroup\shipout\box255
  % additional empty page
  \if@AC@ClearPage 
  \bgroup\global\setbox255\vbox{}
  \egroup\shipout\box255
  \fi
}

